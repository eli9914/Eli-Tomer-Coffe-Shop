@model IEnumerable<ETCoffee.Models.vw_getallproducts>

@{
    ViewBag.Title = "Index";
}


<div class="container"><br /><br />
    <h2 style="text-align:center;color:white;">Items List</h2>

    <table class="table table-hover table-dark">
        <thead style="color:white;">
            <tr>
                @*<th>ID</th>*@
                <th >Subject</th>
                <th>Description</th>
                <th>Price</th>
                <th>Image</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody style="color:white; font-size:20px;" id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    @*<td>@item.ProID</td>*@
                    <td>@item.Category</td>
                    <td>@item.Description</td>
                    <td>@item.Unit $</td>
                    <td><img src="~/Uploads/@item.Image" style="width:150px; height:100px;" /></td>
                    <td>
                        <a href="@Url.Action("Edit", "Products", new { id = item.ProID})" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Deleted", "Products", new { id = item.ProID })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>


</div>



