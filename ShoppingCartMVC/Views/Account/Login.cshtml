@model ETCoffee.Models.tblUser


@using (Html.BeginForm())
{
    <div class="container">
        <h2 style="color:white; text-align:center;">Log In</h2>
        <div  class="row">
            <div style="position: absolute ;top: 20%; left: 33%;" class="col-lg-4">


                <form   class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span style="color:white;">Email:</span>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <span style="color:white;">Password:</span>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>

                    <div style="text-align:center;" class="form-group">
                        <input style="background-color:green;color:white; " type="submit" value="Login" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>

            </div>

        </div>

    </div>
}
