@model ETCoffee.Models.tblCategories


@using (Html.BeginForm())
{

    <div class="container">
        <h2 style="color: white; position: absolute; top: 20%;left: 42%; ">Add Subject</h2>
        <div class="row">
            <div style="position: absolute ;top: 30%; left: 33%;" class="col-lg-4">


                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span style="color:white;">Name:</span>
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                    </div>

                    <div style="text-align:center;" class="form-group">
                        <input style="background-color:green;" type="submit" value="Add Subject" class="btn btn-primary py-3 px-5">

                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>

            </div>

        </div>

    </div>
}
