@model ETCoffee.Models.tblTable

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm())
{
    <div class="container"><br /><br />
        <h2 style="color:white; text-align:center;">Add Table</h2>
        <div class="row">
            <div style="position: absolute ;top: 20%; left: 33%;" class="col-lg-4">
                <form class="bg-white p-5 contact-form">
                    <div class="form-group">
                        <span style="color:white;">Number Of Sits:</span>
                        @Html.TextBoxFor(m => m.numSeats, new { @class = "form-control" })
                        <span style="color:white;">Table Area:</span>
                        @Html.TextBoxFor(m => m.area, new { @class = "form-control" })
                    </div>
                    <br /><br />
                    <div style="text-align:center;" class="form-group">
                        <input style="background-color:green;color:white;" type="submit" value="Add Table" class="btn btn-primary py-3 px-5" data-toggle="modal" data-target=".bd-example-modal-sm">
                    </div>
                    <div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-sm">
                            <div class="modal-content">
                                Added successfully
                            </div>
                        </div>
                    </div>
                </form>
                <h3 style="color:red;">@TempData["msg"]</h3>
            </div>
        </div>
    </div>
}