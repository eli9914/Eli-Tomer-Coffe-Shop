@model ETCoffee.Models.tblSit

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm("Create", "Sit", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div style="color:white;" class="container"><br /><br />
        <h2 style="color: white; text-align: center;">Add Sits</h2>
        <div class="row">
            <div style="position: absolute ;top: 30%; left: 45%;"  class="col-lg-4">
                <form class="bg-white p-5 contact-form">
                    @*<div class="form-group">
                        <span>Table ID:</span>
                        @Html.TextBoxFor(m => m.tableId, new { @class = "form-control" })
                    </div>*@
                    <div class="form-group">
                        <span>Table Numbers:</span><br />
                        @Html.DropDownListFor(m => m.tableId, ViewBag.TableList as SelectList, "--- Select Table ---")
                    </div>
                    <div class="form-group">
                        <input style="background-color:green;" type="submit" value="Add Sit" class="btn btn-primary py-3 px-5">
                    </div>
                </form>
            </div>
        </div>
    </div>
}

