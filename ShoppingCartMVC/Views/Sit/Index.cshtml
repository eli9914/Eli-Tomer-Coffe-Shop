@model IEnumerable<ETCoffee.Models.getAllTableSits>

@{
    ViewBag.Title = "Index";
}

<script src="~/js/jquery.min.js"></script>

<div class="container">
    <h2>View Sits</h2>
    <table class="table table-striped table-dark">
        <thead style="color:white;">
            <tr>
                <th>Table Number</th>
                <th>Sit Number</th>
                <th>Available</th>
            </tr>
        </thead>
        <tbody id="myTable" style="color:white;">
            @foreach (var item in Model)
            {
            <tr>
                <td>@item.tableId</td>
                <td>@item.SitId</td>
                @if (item.available == 1)
                {
                    <td style="color:lawngreen;">Available </td>
                }
                else
                {
                    <td style="color:red;">Not Avialable </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>